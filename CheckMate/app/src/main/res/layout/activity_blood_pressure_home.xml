<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.BloodPressure.BloodPressureHomeActivity">

    <TextView
        android:id="@+id/bloodPressureTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="혈압측정"
        android:textColor="@color/black_text"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.dinuscxj.progressbar.CircleProgressBar
        android:id="@+id/bloodPressureCircleProgressBar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginHorizontal="25sp"
        android:layout_marginVertical="15sp"
        app:layout_constraintBottom_toTopOf="@id/bloodPressureTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bloodPressureTitleTextView"
        app:progress_end_color="#FF0000"
        app:progress_start_color="#FF0000"
        app:progress_stroke_cap="round"
        app:progress_stroke_width="50dp"
        app:progress_text_size="0sp"
        app:style="solid_line" />

    <ProgressBar
        android:id="@+id/bloodPressureProgressBar"
        android:visibility="invisible"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:indeterminateTint="#FF0000"
        app:layout_constraintBottom_toTopOf="@id/bloodPressureTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bloodPressureTitleTextView" />

    <TextView
        android:id="@+id/bloodPressureTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="정확한 측정을 위해\n손목과 측정기를 완전히 밀착시켜주세요."
        android:textSize="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/black_text"
        app:layout_constraintBottom_toTopOf="@id/bloodPressureButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bloodPressureCircleProgressBar"
        tools:ignore="HardcodedText,SpUsage" />



    <Button
        android:textColor="@color/white"
        android:id="@+id/bloodPressureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_base_button"
        android:text="다음"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    app:layout_constraintTop_toBottomOf="bloodPressureTextView"-->



</androidx.constraintlayout.widget.ConstraintLayout>