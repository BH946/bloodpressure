<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="30dp"
android:orientation="vertical" tools:context=".AlertActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="25dp"
        tools:text="오늘의 운동" />

    <TextView
        android:id="@+id/detailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:text="자전거 타기 30분" />


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.5"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/alertButton1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_corners_layout"
        android:backgroundTint="#EFEFEF"
        android:textColor="@color/black_text"
        android:textSize="30dp"
        tools:text="미션 완료!" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/alertButton2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_corners_layout"
        android:backgroundTint="#EFEFEF"
        android:textColor="@color/black_text"
        android:textSize="30dp"
        tools:text="다음에 할게요" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/alertButton3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_corners_layout"
        android:backgroundTint="#EFEFEF"
        android:textColor="@color/black_text"
        android:textSize="30dp"
        tools:text="다른 운동으로 할게요" />

</LinearLayout>

</LinearLayout>